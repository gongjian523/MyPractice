<Window x:Class="WPFPractice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WPF Guide" Height="800" Width="1000">

    <Grid>
        <Rectangle Height="1" VerticalAlignment="Top" Fill="LightGray"/>
        <Grid Margin="0,1,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Vertical" Margin="0,0,1,0">
                <Button Height="20" Content=" 布局" HorizontalContentAlignment="Left" BorderThickness="0" Click="EnterPanel"/>
                <Button Height="20" Content=" 事件与命令" HorizontalContentAlignment="Left" BorderThickness="0" Click="EnterEventAndCommand"/>
                <Button Height="20" Content=" Content Controls" HorizontalContentAlignment="Left" BorderThickness="0" Click="EnterContentControl"/>
                <Button Height="20" Content=" Item Controls" HorizontalContentAlignment="Left" BorderThickness="0" Click="EnterItemControl"/>
            </StackPanel>
            <Rectangle HorizontalAlignment="Right" Width="1" Fill="LightGray"/>
            <Frame x:Name="ContentFrame" Grid.Column="1" NavigationUIVisibility="Hidden" />
        </Grid>
    </Grid>
</Window>
